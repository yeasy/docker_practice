# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]

indent_style = space

indent_size = 2

end_of_line = lf

charset = utf-8

trim_trailing_whitespace = true

insert_final_newline = true

[*.md]

trim_trailing_whitespace = false

[*.py]

indent_size = 4

[Makefile]

indent_style = tab
